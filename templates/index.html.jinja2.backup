{% extends 'layout.html.jinja2' %}

{% block content %}
    <nav id="posts_list">
        {% for name, post in posts %}
            <div class="card">
                <div class="card-body">
                    <p class="small">{{ post.get('published_at') }} <span
                            class="badge badge-warning">{{ categories[post.get('category')].get('name') }}</span></p>
                    <h1 class="card-title">
                        <a href="{{ url_for('app.view_post', cat=post.get('category'), post=name) }}"
                           class="highlight">{{ post.get('title') }}</a>
                    </h1>
                    <p class="card-text">{{ post.get('description') }}</p>
                </div>
            </div>

            <div class="mt-4"></div>

        {% endfor %}
    </nav>
{% endblock %}